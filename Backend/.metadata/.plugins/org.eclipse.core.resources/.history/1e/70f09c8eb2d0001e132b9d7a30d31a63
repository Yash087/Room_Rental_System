package com.example.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import com.example.entity.Landlord;
import com.example.repository.LandlordRepository;

@CrossOrigin(origins = "http://localhost:3000")
@RestController
public class LandlordController {
	@Autowired
	LandlordRepository landRepo;
	@GetMapping("/home")
	public List<Landlord>  getAllLandlord(){
		List<Landlord> owner=landRepo.findAll();
		return owner;
	}
	@GetMapping("/home/{id}")
	public Landlord getLandlord(@PathVariable int id) {
		Landlord l=landRepo.findById(id).get();
		return l;
	}
	@PostMapping("/home/add")
	@ResponseStatus(code=HttpStatus.CREATED)
	public void addLandlord(@RequestBody Landlord owner) {
		landRepo.save(owner);
	}
}
