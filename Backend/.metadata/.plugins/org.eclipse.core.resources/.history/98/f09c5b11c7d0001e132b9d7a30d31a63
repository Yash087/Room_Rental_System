package com.example.service;

import org.springframework.beans.BeanUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.dto.UserDto;
import com.example.entity.Landlord;
import com.example.repository.LandlordRepository;

@Service
public class LandlordService {

	@Autowired
	LandlordRepository landlordRepo;
	public UserDto addLandlord(UserDto landlordDto) {
		//Landlord(landlordDto.getFirstName(), landlordDto.getLastName(), landlordDto.getEmailId(), landlordDto.getPassword(), landlordDto.getPhone());
		Landlord landlord=new Landlord();
		BeanUtils.copyProperties(landlordDto, landlord);
		Landlord addedLandlord = landlordRepo.save(landlord);
		UserDto landlordDTO =new UserDto();
		BeanUtils.copyProperties(addedLandlord, landlordDTO);
		return landlordDTO;
	}
}
